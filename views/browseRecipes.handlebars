<div>
    <div class="cardContainer col-md-10 border rounded darkcolbg">
        <div class="meal-wrapper p-4">        
            <div class="cardMeal-search">
                <h3 class="cardTitle lighttextcol">Find Recipes for Your Ingredients</h3>
                
                <form class="form search-form">
                    <div class = "form-group meal-search-box">
                        <input type = "text" class= "form-control mr-2 border cardSearch-control" placeholder="Enter an ingredient" id="search-input">
                        <button type="submit" class = "btn mt-2 mr-2 border border-dark textcol lightcolbg fw-bold fst-italic" id="cardSearch-btn">
                            Search
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="container py-4">
        <div class="row">
            <div class="col-md-10">
                <div class="trending-box lightcolbg p-4 border rounded">
                    <h3 class="mb-3 textcol ">Your search results:</h3>
                    <div class="animate__animated animate__fadeInRight row">
                        {{#each recipes as |recipe| }}
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <a href="/recipe/{{recipe.id}}">
                                    <img class="card-img-top"  src="{{recipe.link_to_image}}" alt="Card image cap">
                                </a>
                                <div class="card-body">
                                    <h5 class="card-title"><a href="/recipe/{{recipe.id}}">{{recipe.name}}</a></h5>
                                    <p class="card-text">{{recipe.description}}</p>
                                    <p>Created by {{recipe.user.name}} on {{format_date recipe.date_created}}</p>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="./js/browseRecipes.js"></script>